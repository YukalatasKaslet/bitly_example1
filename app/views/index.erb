  <h1>Bitly example</h1>
  <form action="/urls" method="post">
    Ingresa tu url larga
    <br>
    <input type="text" name="url_original">
    <input type="submit" value="short!">
  </form>

  <% if @urls%>
    <% @urls.each do |url| %>
      <p>
      long_url:  <%= url.long_url %>
      <br>
      short_url: <%= url.short_url %>
      </p>
      <% end %>
  <%end%>

